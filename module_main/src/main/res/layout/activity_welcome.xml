<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sjw.module_main.ui.WelcomeActivity">
    <ImageView
    android:id="@+id/wel_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"/>

    <com.sjw.lib_common.view.CountDownView
        android:id="@+id/cdv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        app:gzh_canvasbase_color="#FFFFFF"
        app:gzh_progress_color="#00aaff"
        app:gzh_progress_size="2dp"
        app:gzh_text_color="#000000"
        app:gzh_text_size="12sp"
        app:gzh_time_size="2000"
        />
</RelativeLayout>
